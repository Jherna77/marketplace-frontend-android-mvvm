<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".ui.review.detail.ReviewDetailActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/header_app" />

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="horizontal"
            android:padding="7dp">

            <!-- Imagen del producto -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/product_image"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_image" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_product_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/product_image"
                android:orientation="vertical"
                android:padding="11dp">

                <!-- Nombre del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="16sp"
                    tools:text="@string/product_name_et" />

                <!-- Descripci칩n del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="14sp"
                    tools:text="@string/product_description_et" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>


        <!-- Rese침a del producto -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Autor de la rese침a -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_review_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="@string/name_et" />

            <!-- Fecha de la rese침a -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_review_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="@string/float_format" />

            <!--Rating bar-->
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:numStars="5"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:progressTint="@android:color/holo_orange_light"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:stepSize="1"
                tools:rating="4" />

            <!-- Comentario del producto -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:textStyle="italic"
                tools:text="@tools:sample/lorem[23]" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>