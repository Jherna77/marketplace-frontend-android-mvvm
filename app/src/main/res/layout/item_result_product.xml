<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="11dp"
    app:cardUseCompatPadding="true">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_linear_layout"
        android:orientation="horizontal"
        android:padding="7dp">

        <!-- Imagen del producto -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_image" />

        <!-- Promo -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/promo"
            android:layout_width="55dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:src="@drawable/img_promo"
            android:visibility="gone" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@id/product_image"
            android:orientation="vertical"
            android:padding="11dp">

            <!--Rating bar-->
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:progressTint="@android:color/holo_orange_light"
                android:scaleX="1.1"
                android:scaleY="1.1"
                android:stepSize="1"
                tools:rating="3" />

            <!-- Nombre del producto -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/mulish"
                android:maxLines="1"
                android:textSize="17sp"
                tools:text="@string/product_name_et" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- Precio del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/mulish"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:text="@string/price_format" />

                <!-- Precio tachado -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_price_paint_flags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish"
                    android:textColor="@color/red"
                    android:layout_marginStart="17dp"
                    android:textSize="15sp"
                    tools:text="@string/price_format" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

</com.google.android.material.card.MaterialCardView>