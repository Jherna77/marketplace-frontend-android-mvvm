<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.purchase.detail.PurchaseOrderDetailActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_app" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical">

        <!-- Estado del pedido -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="@string/order_status_tv" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="vertical"
            android:padding="7dp">

            <!-- Número de pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/order_number_tv" />

            <!-- Fecha del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/order_date_tv" />

            <!-- Tienda del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/shop_tv" />

            <!-- Importe del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/amount_tv" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="horizontal"
            android:padding="7dp">

            <!-- Imagen del producto -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/product_image"
                android:layout_width="123dp"
                android:layout_height="123dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_image" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_product_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/product_image"
                android:orientation="vertical"
                android:padding="11dp">

                <!-- Nombre del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/product_name_et" />

                <!-- Precio del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/product_price_et" />

                <!-- Envío del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/shipping_tv" />

                <!-- Cantidad de productos -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/quantity_of_products" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

        <!--Dejar reseña-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_leave_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish"
            android:layout_gravity="center_horizontal"
            android:text="@string/tv_leave_review"
            android:textColor="@color/bazaar"
            android:layout_marginBottom="33dp"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_errors"
            style="@style/ErrorTextView"
            tools:text="@string/error_title" />

        <!-- Botón "Camcelar pedido" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_order"
            style="@style/PrimaryButton"
            android:backgroundTint="@color/red"
            android:text="@string/cancel_order" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>