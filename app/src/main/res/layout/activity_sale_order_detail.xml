<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.sale.detail.SaleOrderDetailActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_app" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical">

        <!-- Estado del pedido -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="@string/order_status_tv" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_sale_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="vertical"
            android:padding="7dp">

            <!-- Número de venta -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/order_number_tv" />

            <!-- Fecha del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/sale_date_tv" />

            <!-- Importe del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/amount_tv" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="horizontal"
            android:padding="3dp">

            <!-- Imagen del producto -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/product_image"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="9dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_image" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_product_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/product_image"
                android:orientation="vertical"
                android:padding="11dp">

                <!-- Nombre del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/product_name_et" />

                <!-- Precio del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/product_price_et" />

                <!-- Envío del producto -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/shipping_tv" />

                <!-- Cantidad de productos -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/mulish"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    tools:text="@string/quantity_of_products" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_customer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="vertical"
            android:padding="3dp">

            <!-- Cliente del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/mulish"
                android:text="@string/tv_send_to"
                android:textSize="15sp" />

            <!-- Cliente del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/customer_tv" />

            <!-- Cliente del pedido -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/email_tv" />

            <!-- Dirección de envío -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                tools:text="@string/sale_address_tv" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Estado del pedido -->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/mulish"
            android:text="@string/order_change_status"
            android:textColor="@color/bazaar"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/set_order_status"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_linear_layout"
            android:fontFamily="@font/mulish"
            android:gravity="center_vertical"
            android:hint="@string/order_status_tv"
            android:padding="11dp"
            android:textSize="17sp"
            app:drawableEndCompat="@drawable/ic_down" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_errors"
            style="@style/ErrorTextView"
            tools:text="@string/error_title" />

        <!-- Botón "Actualizar estado" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_status"
            style="@style/PrimaryButton"
            android:text="@string/btn_update_status" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>