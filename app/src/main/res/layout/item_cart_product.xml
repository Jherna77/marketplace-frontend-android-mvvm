<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="11dp"
    app:cardUseCompatPadding="true">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_linear_layout"
        android:orientation="horizontal"
        android:padding="7dp">

        <!-- Imagen del producto -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_image" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="90dp"
            android:layout_toEndOf="@id/product_image"
            android:orientation="vertical"
            android:padding="11dp">

            <!-- Nombre del producto -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/mulish"
                android:maxLines="1"
                android:textSize="14sp"
                tools:text="@string/product_name_et" />

            <!-- Precio del producto -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/mulish"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="@string/product_price_et" />

            <!-- EnvÃ­o del producto -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_product_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/mulish"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="@string/shipping_tv" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Eliminar producto del carrito -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_delete"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_clear" />

        <!-- Cantidad de productos -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_delete"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edit_text"
            android:fontFamily="@font/mulish"
            android:gravity="center"
            android:hint="@string/quantity_of_products"
            android:padding="3dp"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_down" />

        <!-- Unidades disponibles -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quantity"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/mulish"
            android:padding="3dp"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="@string/tv_stock" />

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

</com.google.android.material.card.MaterialCardView>