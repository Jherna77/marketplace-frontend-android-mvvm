<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_linear_layout"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/mulish"
                android:layout_gravity="center_horizontal"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text="@string/welcome" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mulish"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/img_gps"
                tools:text="@string/address_et" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Productos favoritos -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_favourite_products"
            style="@style/TitleSection"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/favourite_products"
            android:textSize="17sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favourite_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_home_product" />

        <!-- Productos rebajados -->
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleSection"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/discounted"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_discounted_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_home_product" />

        <!-- Productos añadidos recientemente -->
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleSection"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/recently_added"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_home_product" />

        <!-- Productos más vendidos -->
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleSection"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/top_selling"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_top_selling_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_home_product" />

        <!-- Productos mejor valorados -->
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleSection"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/top_rating"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_top_rating_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_home_product" />

        <!-- Categorías aleatorias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_random_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>